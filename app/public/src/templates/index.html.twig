{% extends "layout.html.twig" %}
 
{% block content %}
    <h1 class="pb-2 mt-4 mb-2">Ãšltimos Pedidos</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Cliente</th>
                <th scope="col">Data da compra</th>
                <th scope="col">Valor</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for i,order in orders %}
                <tr>
                    <td class="text-left">
                        {{ order.user.first_name }} {{ order.user.last_name }}
                    </td>
                    <td class="text-left">
                        {{ order.date|date("d/m/Y") }}
                    </td>
                    <td class="text-right">
                        R$ {{ order.value|number_format(2, ',', '.') }}
                    </td>
                    <td class="text-center">
                        {{ order.status }}
                    </td>
                    <td class="text-right">
                        <a href="/order/{{ order.id }}" class="btn btn-primary">Detalhes</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}